{
  "name": "libcat",
  "version": "1.0.0",
  "description": "A beautiful media library manager for organizing and tagging your local movie collection",
  "main": "dist-electron/main.js",
  "author": "libcat",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.node.json && vite build",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && npm run electron:start\"",
    "electron:start": "cross-env NODE_ENV=development electron .",
    "electron:build": "npm run build && electron-builder",
    "preview": "vite preview",
    "postinstall": "electron-rebuild",
    "rebuild": "electron-rebuild"
  },
  "dependencies": {
    "@types/react-window": "^1.8.8",
    "better-sqlite3": "^11.7.0",
    "fluent-ffmpeg": "^2.1.3",
    "framer-motion": "^11.15.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-window": "^2.2.3",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@types/better-sqlite3": "^7.6.12",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^33.3.1",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "vite": "^6.0.6",
    "wait-on": "^8.0.1"
  }
}
