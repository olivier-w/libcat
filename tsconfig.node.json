{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist-electron",
    "rootDir": "electron",
    "declaration": false,
    "sourceMap": true,
    "resolveJsonModule": true,
    "composite": true
  },
  "include": ["electron/**/*.ts"]
}
